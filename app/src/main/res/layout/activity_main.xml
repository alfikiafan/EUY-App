<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitStart"
        android:src="@drawable/sushi"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_pink"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingBottom="45dp"
            android:paddingHorizontal="24dp"
            android:orientation="vertical">

            <TextView
                style="@style/Text.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EUY (Eat Up to You)"/>

            <TextView
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:justificationMode="inter_word"
                android:text="Mari kurangi pemborosan bahan makanan, masak lebih bijak, dan buat hidangan lezat bersama EUY!"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:layout_marginVertical="8dp"
                style="@style/Text.Body.WhiteSemiBold"
                android:textAllCaps="false"
                android:background="@drawable/bg_orange_oval"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginVertical="8dp"
                style="@style/Text.Body.WhiteSemiBold"
                android:textAllCaps="false"
                android:background="@drawable/bg_white_with_border"
                />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>