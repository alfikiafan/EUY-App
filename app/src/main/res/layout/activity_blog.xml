<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Blog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Gambar -->
        <ImageView
            android:id="@+id/gambarBlog"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/rice"
            android:scaleType="centerCrop"
            android:contentDescription="Gambar Blog" />

        <!-- Icon Jam dan Waktu Terakhir Diperbarui -->
        <LinearLayout
            android:id="@+id/llWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconJam"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/clock"
                android:contentDescription="Icon Jam" />

            <TextView
                android:id="@+id/waktuTerakhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Menit"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Deskripsi -->

        <!-- Deskripsi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gambarBlog"
            android:layout_margin="16dp"
            android:text="Deskripsi"
            android:textStyle="bold"
            android:textColor="@color/orange" />


        <TextView
            android:id="@+id/deskripsiBlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gambarBlog"
            android:layout_margin="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed suscipit nisl ac nunc vestibulum, vitae eleifend sapien feugiat..."
            android:textColor="@android:color/black" />
    </LinearLayout>


</RelativeLayout>