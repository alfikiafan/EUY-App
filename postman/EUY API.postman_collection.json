	"item": [
		{
			"name": "Register",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json()",
							"",
							"if (responseJson.accessToken) {",
							"    pm.environment.set('accessToken', responseJson.accessToken);",
							"}",
							"",
							"if (responseJson.refreshToken) {",
							"    pm.environment.set('refreshToken', responseJson.refreshToken);",
							"}",
							"",
							"if (responseJson.data) {",
							"    const { data } = responseJson",
							"    if (data.user) {",
							"        const { user } = data",
							"        pm.environment.set('userId', user.id)",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"User\",\n    \"email\": \"user@mail.com\",\n    \"password\": \"user\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:3000/api/auth/register",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"api",
						"auth",
						"register"
					]
				}
			},
			"response": []
